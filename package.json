{
  "name": "nodejs-typescript-starter",
  "version": "1.0.0",
  "description": "A template for nodejs projects written in typescript",
  "main": "index.js",
  "scripts": {
    "start": "npm run watch:ts & npm run serve",
    "test": "jasmine JASMINE_CONFIG_PATH=test/jasmine.json",
    "watch:test": "watch 'npm run test' dist test --wait=0.1",
    "watch:ts": "tsc -w",
    "serve": "nodemon dist/index"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RobYed/nodejs-typescript-starter.git"
  },
  "keywords": [
    "nodejs",
    "express",
    "typescript"
  ],
  "author": "Robert Dey",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/RobYed/nodejs-typescript-starter/issues"
  },
  "homepage": "https://github.com/RobYed/nodejs-typescript-starter#readme",
  "dependencies": {
    "express": "^4.14.0"
  }
}
